#!/bin/bash

hostnamectl set-hostname Rudraksh

curl -o /bin/utils https://raw.githubusercontent.com/RavikumarRamesh/RudrakshLab/main/utils  && chmod +x /bin/utils
curl -o /bin/fresh https://raw.githubusercontent.com/RavikumarRamesh/RudrakshLab/main/fresh && chmod +x /bin/fresh
curl -o /bin/doclist.csv https://raw.githubusercontent.com/RavikumarRamesh/RudrakshLab/main/doclist.csv  

source /bin/utils

#Add Swap memory
#swap_add

# Update and Upgrade the current Kali system
update_upgrade

#Install docker
docker_install

#Login into the docker hub account - Replace valid credentials in this script
docker_login

#Install Docker compose + required tools
install_tool

# If docker already install then stop all containers and forcefully clean the images
all_docker_img_remove 

# Download launcher and utils

curl -o /bin/rudraksh https://raw.githubusercontent.com/RavikumarRamesh/RudrakshLab/main/rudraksh  
curl -o /bin/parseimages https://raw.githubusercontent.com/RavikumarRamesh/RudrakshLab/main/parseimages 

fresh

#reboot
